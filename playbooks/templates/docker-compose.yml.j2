
services:
  prometheus:
    image: "{{ prometheus_image }}"
    container_name: prometheus
    command:
      - "--config.file=/etc/prometheus/prometheus.yml"
      - "--storage.tsdb.path=/prometheus"
      - "--storage.tsdb.retention.time={{ prometheus_retention_time }}"
      - "--storage.tsdb.retention.size={{ prometheus_retention_size }}"
      - "--web.enable-lifecycle"
    ports:
      - "{{ monitoring_bind_address }}:{{ prometheus_host_port }}:9090"
    volumes:
      - "{{ monitoring_project_dir }}/prometheus.yml:/etc/prometheus/prometheus.yml:ro"
      - "{{ monitoring_project_dir }}/alerts.yml:/etc/prometheus/alerts.yml:ro"
      - "{{ monitoring_data_root }}/prometheus/data:/prometheus"
    restart: unless-stopped
    depends_on:
      - alertmanager

  alertmanager:
    image: "{{ alertmanager_image }}"
    container_name: alertmanager
    command:
      - "--config.file=/etc/alertmanager/alertmanager.yml"
      - "--storage.path=/alertmanager"
    ports:
      - "{{ monitoring_bind_address }}:{{ alertmanager_host_port }}:9093"
    volumes:
      - "{{ monitoring_project_dir }}/alertmanager.yml:/etc/alertmanager/alertmanager.yml:ro"
      - "{{ monitoring_data_root }}/alertmanager/data:/alertmanager"
    restart: unless-stopped

  grafana:
    image: "{{ grafana_image }}"
    container_name: grafana
    environment:
      - GF_SECURITY_ADMIN_USER={{ grafana_admin_user }}
      - GF_SECURITY_ADMIN_PASSWORD={{ grafana_admin_password }}
      - GF_PATHS_PROVISIONING=/etc/grafana/provisioning
    ports:
      - "{{ monitoring_bind_address }}:{{ grafana_host_port }}:3000"
    volumes:
      - "{{ monitoring_data_root }}/grafana/data:/var/lib/grafana"
      - "{{ monitoring_project_dir }}/grafana-datasource-prometheus.yml:/etc/grafana/provisioning/datasources/prometheus.yml:ro"
      - "{{ monitoring_project_dir }}/grafana-dashboards-provider.yml:/etc/grafana/provisioning/dashboards/dashboards.yml:ro"
    restart: unless-stopped
    depends_on:
      - prometheus

  node-exporter:
    image: "{{ node_exporter_image }}"
    container_name: node-exporter
    # Node Exporter reads host metrics. It needs host mounts:
    # - /proc and /sys for kernel stats
    # - / for filesystem stats
    command:
      - "--path.procfs=/host/proc"
      - "--path.sysfs=/host/sys"
      - "--path.rootfs=/rootfs"
      - "--collector.filesystem.mount-points-exclude=^/(sys|proc|dev|host|etc)($$|/)"
    volumes:
      - /proc:/host/proc:ro
      - /sys:/host/sys:ro
      - /:/rootfs:ro
    ports:
      - "{{ monitoring_bind_address }}:{{ node_exporter_host_port }}:9100"
    restart: unless-stopped

  cadvisor:
    image: "{{ cadvisor_image }}"
    container_name: cadvisor
    # cAdvisor exposes container-level metrics.
    volumes:
      - /:/rootfs:ro
      - /var/run:/var/run:ro
      - /sys:/sys:ro
      - /var/lib/docker:/var/lib/docker:ro
    ports:
      - "{{ monitoring_bind_address }}:{{ cadvisor_host_port }}:8080"
    restart: unless-stopped
