kind: Cluster
apiVersion: kind.x-k8s.io/v1alpha4
name: {{ kind_cluster_name }}
nodes:
  - role: control-plane
{% for _i in range(kind_worker_count | int) %}
  - role: worker
{% endfor %}
networking:
  apiServerAddress: "{{ kind_api_server_address }}"
  apiServerPort: {{ kind_api_server_port | int }}

